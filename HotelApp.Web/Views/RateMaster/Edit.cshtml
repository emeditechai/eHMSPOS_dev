@model HotelApp.Web.Models.RateMaster

@{
    var isReadOnly = (bool?)(ViewBag.IsReadOnly) ?? false;
    var roomTypes = ViewBag.RoomTypes as IEnumerable<HotelApp.Web.Models.RoomType> ?? Enumerable.Empty<HotelApp.Web.Models.RoomType>();
    var customerTypes = ViewBag.CustomerTypes as IEnumerable<string> ?? Enumerable.Empty<string>();
    var sources = ViewBag.Sources as IEnumerable<string> ?? Enumerable.Empty<string>();
    ViewData["Title"] ??= isReadOnly ? "Rate Details" : "Edit Rate";
    var headingText = ViewData["Title"]?.ToString() ?? (isReadOnly ? "Rate Details" : "Edit Rate");
    string FormatDate(DateTime date) => date == default ? "Not recorded" : date.ToString("dd MMM yyyy HH:mm");
    string FormatUser(int? userId) => userId.HasValue ? $"User #{userId}" : "System";
}

<div class="page-header">
    <h2><i class="fas fa-edit"></i> @headingText</h2>
    <a asp-action="List" class="btn-cancel">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="form-container @(isReadOnly ? "form-readonly" : string.Empty)">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="CreatedBy" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (Model != null && (Model.CreatedDate != default || Model.LastModifiedDate != default))
        {
            <div class="audit-info">
                <div class="audit-item">
                    <span class="audit-label">Created</span>
                    <span class="audit-value">@FormatDate(Model.CreatedDate)</span>
                    <span class="audit-subtext">@FormatUser(Model.CreatedBy)</span>
                </div>
                <div class="audit-item">
                    <span class="audit-label">Last Updated</span>
                    <span class="audit-value">@FormatDate(Model.LastModifiedDate)</span>
                </div>
            </div>
        }

        <div class="form-row">
            <div class="form-group">
                <label asp-for="RoomTypeId">Room Type</label>
                <select asp-for="RoomTypeId" class="form-control" disabled="@(isReadOnly ? "disabled" : null)">
                    <option value="WalkIn">WalkIn</option>
                    <option value="Phone">Phone</option>
                    <option value="Websites">Websites</option>
                    <option value="OTA">OTA</option>
                    <option value="Reference">Reference</option>
                    }
                </select>
                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerType">Customer Type</label>
                <select asp-for="CustomerType" class="form-control" disabled="@(isReadOnly ? "disabled" : null)">
                    <option value="">-- Select Customer Type --</option>
                    @foreach (var customerType in customerTypes)
                    {
                        <option value="@customerType">@customerType</option>
                    }
                </select>
                <span asp-validation-for="CustomerType" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="Source">Source</label>
                <select asp-for="Source" class="form-control" disabled="@(isReadOnly ? "disabled" : null)">
                    <option value="">-- Select Source --</option>
                    @foreach (var source in sources)
                    {
                        <option value="@source">@source</option>
                    }
                </select>
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BaseRate">Base Rate (₹)</label>
                <input asp-for="BaseRate" type="number" step="0.01" class="form-control" readonly="@(isReadOnly ? "readonly" : null)" />
                <span asp-validation-for="BaseRate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="ExtraPaxRate">Extra Pax Rate (₹)</label>
                <input asp-for="ExtraPaxRate" type="number" step="0.01" class="form-control" readonly="@(isReadOnly ? "readonly" : null)" />
                <span asp-validation-for="ExtraPaxRate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TaxPercentage">Tax Percentage (%)</label>
                <input asp-for="TaxPercentage" type="number" step="0.01" class="form-control" readonly="@(isReadOnly ? "readonly" : null)" />
                <span asp-validation-for="TaxPercentage" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="StartDate">Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" readonly="@(isReadOnly ? "readonly" : null)" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate">End Date</label>
                <input asp-for="EndDate" type="date" class="form-control" readonly="@(isReadOnly ? "readonly" : null)" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsWeekdayRate" type="checkbox" class="form-check-input" disabled="@(isReadOnly ? "disabled" : null)" />
                    <label asp-for="IsWeekdayRate" class="form-check-label">Is Weekday Rate</label>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ApplyDiscount">Apply Discount</label>
                <input asp-for="ApplyDiscount" type="text" class="form-control" readonly="@(isReadOnly ? "readonly" : null)" />
                <span asp-validation-for="ApplyDiscount" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsDynamicRate" type="checkbox" class="form-check-input" disabled="@(isReadOnly ? "disabled" : null)" />
                    <label asp-for="IsDynamicRate" class="form-check-label">Is Dynamic Rate</label>
                </div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" disabled="@(isReadOnly ? "disabled" : null)" />
                    <label asp-for="IsActive" class="form-check-label">Is Active</label>
                </div>
            </div>
        </div>

        @if (isReadOnly)
        {
            <div class="form-actions">
                <a asp-action="List" class="btn-cancel">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        }
        else
        {
            <div class="form-actions">
                <button type="submit" class="btn-save">
                    <i class="fas fa-save"></i> Update Rate
                </button>
                <a asp-action="List" class="btn-cancel">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        }
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
