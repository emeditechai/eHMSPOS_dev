@model HotelApp.Web.ViewModels.RateMasterViewModel

@{
    var isReadOnly = (bool?)(ViewBag.IsReadOnly) ?? false;
    var roomTypes = ViewBag.RoomTypes as IEnumerable<HotelApp.Web.Models.RoomType> ?? Enumerable.Empty<HotelApp.Web.Models.RoomType>();
    var customerTypes = ViewBag.CustomerTypes as IEnumerable<string> ?? Enumerable.Empty<string>();
    var sources = ViewBag.Sources as IEnumerable<string> ?? Enumerable.Empty<string>();
    ViewData["Title"] ??= isReadOnly ? "Rate Details" : "Edit Rate";
    var headingText = ViewData["Title"]?.ToString() ?? (isReadOnly ? "Rate Details" : "Edit Rate");
    string FormatDate(DateTime date) => date == default ? "Not recorded" : date.ToString("dd MMM yyyy HH:mm");
    string FormatUser(int? userId) => userId.HasValue ? $"User #{userId}" : "System";
}

<style>
    .master-edit-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        padding: 30px 50px;
        max-width: 95%;
        width: 100%;
        margin: 0 auto;
    }

    .master-edit-header {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #f0f0f0;
    }

    .master-edit-header h3 {
        margin: 0;
        color: var(--primary);
        font-size: 24px;
        font-weight: 600;
    }

    .audit-info {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 25px;
    }

    .audit-item {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .audit-label {
        font-weight: 600;
        color: #666;
        font-size: 12px;
        text-transform: uppercase;
    }

    .audit-value {
        color: #333;
        font-size: 14px;
        font-weight: 500;
    }

    .audit-subtext {
        color: #888;
        font-size: 13px;
    }

    .master-form-section {
        margin-bottom: 25px;
    }

    .section-title {
        font-size: 16px;
        font-weight: 600;
        color: #333;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .section-title i {
        color: var(--primary);
    }

    .master-form-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px 25px;
    }

    .master-form-group {
        display: flex;
        flex-direction: column;
    }

    .master-form-group label {
        font-weight: 500;
        margin-bottom: 8px;
        color: #333;
        font-size: 14px;
    }

    .master-form-group input,
    .master-form-group select {
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .master-form-group input:focus,
    .master-form-group select:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(26, 42, 108, 0.1);
    }

    .master-form-group input:read-only,
    .master-form-group select:disabled {
        background-color: #f5f5f5;
        cursor: not-allowed;
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 8px;
        padding-top: 30px;
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        cursor: pointer;
    }

    .form-check-label {
        margin: 0;
        cursor: pointer;
    }

    .master-form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        padding-top: 25px;
        border-top: 2px solid #f0f0f0;
    }

    .master-form-actions .btn-save,
    .master-form-actions .btn-cancel {
        padding: 12px 30px;
        font-size: 15px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.2s;
    }

    .page-header {
        max-width: 95%;
        margin: 0 auto 20px;
    }

    @@media (max-width: 1400px) {
        .master-form-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        .audit-info {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 768px) {
        .master-form-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media screen and (min-width: 1200px) {
        .master-edit-container {
            max-width: 98%;
        }
    }

    @@media print {
        body {
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }
        @@page {
            size: landscape;
            margin: 0.5cm;
        }
        .master-edit-container {
            max-width: 100%;
            padding: 20px;
        }
    }

    /* Weekend Rates Styles */
    .weekend-days-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
        margin-bottom: 15px;
    }

    .weekend-day-item {
        display: flex;
        flex-direction: column;
        gap: 8px;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
        border: 2px solid #e9ecef;
    }

    .day-checkbox {
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        color: #495057;
        cursor: pointer;
        margin-bottom: 5px;
    }

    .day-checkbox input[type="checkbox"] {
        width: 18px;
        height: 18px;
        cursor: pointer;
    }

    .weekend-rate-input {
        padding: 8px 12px;
        border: 1px solid #ced4da;
        border-radius: 6px;
        font-size: 13px;
    }

    .weekend-rate-input:enabled {
        background: white;
    }

    .weekend-rate-input:disabled {
        background: #e9ecef;
        cursor: not-allowed;
    }

    /* Special Day Rates Styles */
    .special-day-row {
        display: grid;
        grid-template-columns: 160px 160px 1fr 1fr 1fr 50px;
        gap: 12px;
        align-items: end;
        margin-bottom: 12px;
        padding: 12px;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .special-day-field {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .special-day-field label {
        font-size: 12px;
        font-weight: 500;
        color: #495057;
    }

    .special-day-field input {
        padding: 8px 12px;
        border: 1px solid #ced4da;
        border-radius: 6px;
        font-size: 13px;
    }

    .btn-add-special-day {
        padding: 10px 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 10px;
    }

    .btn-add-special-day:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }

    .btn-remove-special-day {
        padding: 8px 12px;
        background: #dc3545;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
    }

    .btn-remove-special-day:hover {
        background: #c82333;
    }
</style>

<div class="page-header">
    <h2><i class="fas fa-edit"></i> @headingText</h2>
    <a asp-action="List" class="btn-cancel">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="master-edit-container @(isReadOnly ? "form-readonly" : string.Empty)">
    <div class="master-edit-header">
        <h3><i class="fas fa-dollar-sign"></i> @headingText</h3>
    </div>
    
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="CreatedBy" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (Model != null && (Model.CreatedDate != default || Model.LastModifiedDate != default))
        {
            <div class="audit-info">
                <div class="audit-item">
                    <span class="audit-label">Created</span>
                    <span class="audit-value">@FormatDate(Model.CreatedDate)</span>
                    <span class="audit-subtext">@FormatUser(Model.CreatedBy)</span>
                </div>
                <div class="audit-item">
                    <span class="audit-label">Last Updated</span>
                    <span class="audit-value">@FormatDate(Model.LastModifiedDate)</span>
                </div>
            </div>
        }

        <div class="master-form-section">
            <div class="section-title">
                <i class="fas fa-info-circle"></i>
                Basic Rate Information
            </div>
            <div class="master-form-grid">
                <div class="master-form-group">
                    <label asp-for="RoomTypeId">Room Type</label>
                    <select asp-for="RoomTypeId" class="form-control" disabled="@(isReadOnly ? "disabled" : null)">
                        @foreach (var roomType in roomTypes)
                        {
                            <option value="@roomType.Id">@roomType.TypeName</option>
                        }
                    </select>
                    <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                </div>

                <div class="master-form-group">
                    <label asp-for="CustomerType">Customer Type</label>
                    <select asp-for="CustomerType" class="form-control" disabled="@(isReadOnly ? "disabled" : null)">
                        <option value="">-- Select Customer Type --</option>
                        @foreach (var customerType in customerTypes)
                        {
                            <option value="@customerType">@customerType</option>
                        }
                    </select>
                    <span asp-validation-for="CustomerType" class="text-danger"></span>
                </div>

                <div class="master-form-group">
                    <label asp-for="Source">Source</label>
                    <select asp-for="Source" class="form-control" disabled="@(isReadOnly ? "disabled" : null)">
                        <option value="">-- Select Source --</option>
                        @foreach (var source in sources)
                        {
                            <option value="@source">@source</option>
                        }
                    </select>
                    <span asp-validation-for="Source" class="text-danger"></span>
                </div>

                <div class="master-form-group">
                    <label asp-for="ApplyDiscount">Apply Discount</label>
                    <input asp-for="ApplyDiscount" type="text" class="form-control" readonly="@(isReadOnly ? "readonly" : null)" />
                    <span asp-validation-for="ApplyDiscount" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="master-form-section">
            <div class="section-title">
                <i class="fas fa-rupee-sign"></i>
                Pricing & Tax Details
            </div>
            <div class="master-form-grid">
                <div class="master-form-group">
                    <label asp-for="BaseRate">Base Rate (₹)</label>
                    <input asp-for="BaseRate" type="number" step="0.01" class="form-control" readonly="@(isReadOnly ? "readonly" : null)" />
                    <span asp-validation-for="BaseRate" class="text-danger"></span>
                </div>

                <div class="master-form-group">
                    <label asp-for="ExtraPaxRate">Extra Pax Rate (₹)</label>
                    <input asp-for="ExtraPaxRate" type="number" step="0.01" class="form-control" readonly="@(isReadOnly ? "readonly" : null)" />
                    <span asp-validation-for="ExtraPaxRate" class="text-danger"></span>
                </div>

                <div class="master-form-group">
                    <label asp-for="TaxPercentage">Tax Percentage (%)</label>
                    <input asp-for="TaxPercentage" type="number" step="0.01" class="form-control" readonly="@(isReadOnly ? "readonly" : null)" />
                    <span asp-validation-for="TaxPercentage" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="master-form-section">
            <div class="section-title">
                <i class="fas fa-cog"></i>
                Additional Settings
            </div>
            <div class="master-form-grid">
                <div class="master-form-group">
                    <label asp-for="StartDate">Start Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" readonly="@(isReadOnly ? "readonly" : null)" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="master-form-group">
                    <label asp-for="EndDate">End Date</label>
                    <input asp-for="EndDate" type="date" class="form-control" readonly="@(isReadOnly ? "readonly" : null)" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="master-form-group">
                    <div class="form-check">
                        <input asp-for="IsWeekdayRate" type="checkbox" class="form-check-input" disabled="@(isReadOnly ? "disabled" : null)" />
                        <label asp-for="IsWeekdayRate" class="form-check-label">Is Weekday Rate</label>
                    </div>
                </div>

                <div class="master-form-group">
                    <div class="form-check">
                        <input asp-for="IsDynamicRate" type="checkbox" class="form-check-input" disabled="@(isReadOnly ? "disabled" : null)" />
                        <label asp-for="IsDynamicRate" class="form-check-label">Is Dynamic Rate</label>
                    </div>
                </div>

                <div class="master-form-group">
                    <div class="form-check">
                        <input asp-for="IsActive" type="checkbox" class="form-check-input" disabled="@(isReadOnly ? "disabled" : null)" />
                        <label asp-for="IsActive" class="form-check-label">Is Active</label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Weekend Rates Section -->
        <div class="master-form-section">
            <div class="section-title">
                <i class="fas fa-calendar-week"></i>
                Weekend Rates (Optional)
                @if (!isReadOnly)
                {
                    <label style="margin-left: auto; display: flex; align-items: center; gap: 8px; font-size: 14px; font-weight: normal;">
                        <input type="checkbox" id="enableWeekendRates" asp-for="HasWeekendRates" style="width: 18px; height: 18px;" />
                        Enable Weekend Rates
                    </label>
                }
            </div>
            <div id="weekendRatesContainer" style="display: @(Model?.HasWeekendRates == true ? "block" : "none");">
                <div class="weekend-days-grid">
                    @if (Model?.WeekendRates != null)
                    {
                        @for (int i = 0; i < Model.WeekendRates.Count; i++)
                        {
                            var weekendRate = Model.WeekendRates[i];
                            <div class="weekend-day-item">
                                <input type="hidden" name="WeekendRates[@i].Id" value="@weekendRate.Id" />
                                <input type="hidden" name="WeekendRates[@i].DayOfWeek" value="@weekendRate.DayOfWeek" />
                                <label class="day-checkbox">
                                    <input type="checkbox" 
                                           name="WeekendDays" 
                                           value="@weekendRate.DayOfWeek" 
                                           class="weekend-day-check" 
                                           @(weekendRate.IsSelected ? "checked" : "")
                                           @(isReadOnly ? "disabled" : "") />
                                    <span>@weekendRate.DayOfWeek</span>
                                </label>
                                <input type="number" 
                                       step="0.01" 
                                       placeholder="Base Rate" 
                                       name="WeekendRates[@i].BaseRate" 
                                       value="@(weekendRate.IsSelected ? weekendRate.BaseRate : 0)" 
                                       class="weekend-rate-input" 
                                       data-day="@weekendRate.DayOfWeek" 
                                       data-type="base" 
                                       @(weekendRate.IsSelected && !isReadOnly ? "" : "disabled")
                                       @(isReadOnly ? "readonly" : "") />
                                <input type="number" 
                                       step="0.01" 
                                       placeholder="Extra Pax Rate" 
                                       name="WeekendRates[@i].ExtraPaxRate" 
                                       value="@(weekendRate.IsSelected ? weekendRate.ExtraPaxRate : 0)" 
                                       class="weekend-rate-input" 
                                       data-day="@weekendRate.DayOfWeek" 
                                       data-type="extra" 
                                       @(weekendRate.IsSelected && !isReadOnly ? "" : "disabled")
                                       @(isReadOnly ? "readonly" : "") />
                            </div>
                        }
                    }
                </div>
                <small class="form-text text-muted">Select days and set rates. Tax percentage from main rate will apply.</small>
            </div>
        </div>

        <!-- Special Day Rates Section -->
        <div class="master-form-section">
            <div class="section-title">
                <i class="fas fa-star"></i>
                Special Day Rates (Optional)
                @if (!isReadOnly)
                {
                    <label style="margin-left: auto; display: flex; align-items: center; gap: 8px; font-size: 14px; font-weight: normal;">
                        <input type="checkbox" id="enableSpecialDayRates" asp-for="HasSpecialDayRates" style="width: 18px; height: 18px;" />
                        Enable Special Day Rates
                    </label>
                }
            </div>
            <div id="specialDayRatesContainer" style="display: @(Model?.HasSpecialDayRates == true ? "block" : "none");">
                <div id="specialDaysContainer">
                    @if (Model?.SpecialDayRates != null && Model.SpecialDayRates.Any())
                    {
                        @for (int i = 0; i < Model.SpecialDayRates.Count; i++)
                        {
                            var specialRate = Model.SpecialDayRates[i];
                            <div class="special-day-row" id="special-day-row-@i">
                                <input type="hidden" name="SpecialDayRates[@i].Id" value="@specialRate.Id" />
                                <div class="special-day-field">
                                    <label>From Date <span class="text-danger">*</span></label>
                                    <input type="date" 
                                           name="SpecialDayRates[@i].FromDate" 
                                           value="@specialRate.FromDate.ToString("yyyy-MM-dd")" 
                                           required 
                                           @(isReadOnly ? "readonly" : "") />
                                </div>
                                <div class="special-day-field">
                                    <label>To Date <span class="text-danger">*</span></label>
                                    <input type="date" 
                                           name="SpecialDayRates[@i].ToDate" 
                                           value="@specialRate.ToDate.ToString("yyyy-MM-dd")" 
                                           required 
                                           @(isReadOnly ? "readonly" : "") />
                                </div>
                                <div class="special-day-field">
                                    <label>Event Name</label>
                                    <input type="text" 
                                           name="SpecialDayRates[@i].EventName" 
                                           value="@specialRate.EventName" 
                                           placeholder="e.g., New Year, Christmas" 
                                           @(isReadOnly ? "readonly" : "") />
                                </div>
                                <div class="special-day-field">
                                    <label>Base Rate (₹) <span class="text-danger">*</span></label>
                                    <input type="number" 
                                           step="0.01" 
                                           name="SpecialDayRates[@i].BaseRate" 
                                           value="@specialRate.BaseRate" 
                                           placeholder="0" 
                                           required 
                                           @(isReadOnly ? "readonly" : "") />
                                </div>
                                <div class="special-day-field">
                                    <label>Extra Pax Rate (₹)</label>
                                    <input type="number" 
                                           step="0.01" 
                                           name="SpecialDayRates[@i].ExtraPaxRate" 
                                           value="@specialRate.ExtraPaxRate" 
                                           placeholder="0" 
                                           @(isReadOnly ? "readonly" : "") />
                                </div>
                                @if (!isReadOnly)
                                {
                                    <div class="special-day-field">
                                        <button type="button" class="btn-remove-special-day" onclick="removeSpecialDayRow(@i)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
                @if (!isReadOnly)
                {
                    <button type="button" class="btn-add-special-day" onclick="addSpecialDayRow()">
                        <i class="fas fa-plus"></i> Add Special Day
                    </button>
                }
                <small class="form-text text-muted">Add specific dates for special rates (holidays, events, etc.). Tax percentage from main rate will apply.</small>
            </div>
        </div>

        @if (isReadOnly)
        {
            <div class="master-form-actions">
                <a asp-action="List" class="btn-cancel">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        }
        else
        {
            <div class="master-form-actions">
                <a asp-action="List" class="btn-cancel">
                    <i class="fas fa-times"></i> Cancel
                </a>
                <button type="submit" class="btn-save">
                    <i class="fas fa-save"></i> Update Rate
                </button>
            </div>
        }
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        @if (!isReadOnly)
        {
            @:// Weekend Rates Toggle
            @:document.getElementById('enableWeekendRates').addEventListener('change', function() {
            @:    const container = document.getElementById('weekendRatesContainer');
            @:    container.style.display = this.checked ? 'block' : 'none';
            @:});

            @:// Weekend Day Selection
            @:document.querySelectorAll('.weekend-day-check').forEach(checkbox => {
            @:    checkbox.addEventListener('change', function() {
            @:        const day = this.value;
            @:        const inputs = document.querySelectorAll(`input.weekend-rate-input[data-day="${day}"]`);
            @:        inputs.forEach(input => {
            @:            input.disabled = !this.checked;
            @:            if (!this.checked) {
            @:                input.value = '0';
            @:            }
            @:        });
            @:    });
            @:});

            @:// Special Day Rates Toggle
            @:document.getElementById('enableSpecialDayRates').addEventListener('change', function() {
            @:    const container = document.getElementById('specialDayRatesContainer');
            @:    container.style.display = this.checked ? 'block' : 'none';
            @:});

            @:// Special Day Row Counter (start from existing count)
            @:let specialDayCounter = @(Model?.SpecialDayRates?.Count ?? 0);

            @:// Add Special Day Row
            @:function addSpecialDayRow() {
            @:    const container = document.getElementById('specialDaysContainer');
            @:    const row = document.createElement('div');
            @:    row.className = 'special-day-row';
            @:    row.id = `special-day-row-${specialDayCounter}`;
            @:    row.innerHTML = `
            @:        <div class="special-day-field">
            @:            <label>From Date <span class="text-danger">*</span></label>
            @:            <input type="date" name="SpecialDayRates[${specialDayCounter}].FromDate" required />
            @:        </div>
            @:        <div class="special-day-field">
            @:            <label>To Date <span class="text-danger">*</span></label>
            @:            <input type="date" name="SpecialDayRates[${specialDayCounter}].ToDate" required />
            @:        </div>
            @:        <div class="special-day-field">
            @:            <label>Event Name</label>
            @:            <input type="text" name="SpecialDayRates[${specialDayCounter}].EventName" placeholder="e.g., New Year, Christmas" />
            @:        </div>
            @:        <div class="special-day-field">
            @:            <label>Base Rate (₹) <span class="text-danger">*</span></label>
            @:            <input type="number" step="0.01" name="SpecialDayRates[${specialDayCounter}].BaseRate" placeholder="0" required />
            @:        </div>
            @:        <div class="special-day-field">
            @:            <label>Extra Pax Rate (₹)</label>
            @:            <input type="number" step="0.01" name="SpecialDayRates[${specialDayCounter}].ExtraPaxRate" placeholder="0" />
            @:        </div>
            @:        <div class="special-day-field">
            @:            <button type="button" class="btn-remove-special-day" onclick="removeSpecialDayRow(${specialDayCounter})">
            @:                <i class="fas fa-trash"></i>
            @:            </button>
            @:        </div>
            @:    `;
            @:    container.appendChild(row);
            @:    specialDayCounter++;
            @:}

            @:// Remove Special Day Row
            @:function removeSpecialDayRow(id) {
            @:    const row = document.getElementById(`special-day-row-${id}`);
            @:    if (row) {
            @:        row.remove();
            @:    }
            @:}
        }
    </script>
}
