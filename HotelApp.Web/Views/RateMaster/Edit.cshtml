@model HotelApp.Web.Models.RateMaster

@{
    ViewData["Title"] = "Edit Rate";
}

<div class="page-header">
    <h2><i class="fas fa-edit"></i> Edit Rate</h2>
    <a asp-action="List" class="btn-cancel">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="form-container">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="CreatedBy" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="RoomTypeId">Room Type</label>
                <select asp-for="RoomTypeId" class="form-control">
                    <option value="">-- Select Room Type --</option>
                    @foreach (var roomType in ViewBag.RoomTypes)
                    {
                        <option value="@roomType.Id">@roomType.TypeName (Max: @roomType.MaxOccupancy, Base: ₹@roomType.BaseRate)</option>
                    }
                </select>
                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerType">Customer Type</label>
                <select asp-for="CustomerType" class="form-control">
                    <option value="">-- Select Customer Type --</option>
                    @foreach (var customerType in ViewBag.CustomerTypes)
                    {
                        <option value="@customerType">@customerType</option>
                    }
                </select>
                <span asp-validation-for="CustomerType" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="Source">Source</label>
                <select asp-for="Source" class="form-control">
                    <option value="">-- Select Source --</option>
                    @foreach (var source in ViewBag.Sources)
                    {
                        <option value="@source">@source</option>
                    }
                </select>
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BaseRate">Base Rate (₹)</label>
                <input asp-for="BaseRate" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="BaseRate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="ExtraPaxRate">Extra Pax Rate (₹)</label>
                <input asp-for="ExtraPaxRate" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="ExtraPaxRate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TaxPercentage">Tax Percentage (%)</label>
                <input asp-for="TaxPercentage" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="TaxPercentage" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="StartDate">Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate">End Date</label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsWeekdayRate" type="checkbox" class="form-check-input" />
                    <label asp-for="IsWeekdayRate" class="form-check-label">Is Weekday Rate</label>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ApplyDiscount">Apply Discount</label>
                <input asp-for="ApplyDiscount" type="text" class="form-control" />
                <span asp-validation-for="ApplyDiscount" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsDynamicRate" type="checkbox" class="form-check-input" />
                    <label asp-for="IsDynamicRate" class="form-check-label">Is Dynamic Rate</label>
                </div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Is Active</label>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-save">
                <i class="fas fa-save"></i> Update Rate
            </button>
            <a asp-action="List" class="btn-cancel">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
