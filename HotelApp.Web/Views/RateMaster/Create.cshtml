@model HotelApp.Web.Models.RateMaster
@{
    ViewData["Title"] = "Create Rate";
    var roomTypes = ViewBag.RoomTypes as IEnumerable<HotelApp.Web.Models.RoomType>;
}

<style>
    .rate-create-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        padding: 30px 50px;
        max-width: 95%;
        width: 100%;
        margin: 0 auto;
    }

    .rate-create-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #f0f0f0;
    }

    .rate-create-header h3 {
        margin: 0;
        color: var(--primary);
        font-size: 24px;
        font-weight: 600;
    }

    .rate-form-section {
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 16px;
        font-weight: 600;
        color: #333;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .section-title i {
        color: var(--primary);
    }

    .rate-form-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px 25px;
        margin-bottom: 25px;
    }

    .rate-form-group {
        display: flex;
        flex-direction: column;
    }

    .rate-form-group label {
        font-weight: 500;
        margin-bottom: 8px;
        color: #333;
        font-size: 14px;
    }

    .rate-form-group input,
    .rate-form-group select {
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .rate-form-group input:focus,
    .rate-form-group select:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(26, 42, 108, 0.1);
    }

    .rate-form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        padding-top: 25px;
        border-top: 2px solid #f0f0f0;
    }

    .rate-form-actions .btn-save,
    .rate-form-actions .btn-cancel {
        padding: 12px 30px;
        font-size: 15px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.2s;
    }

    /* Landscape optimized layout */
    body {
        min-width: 100%;
    }

    .page-header {
        max-width: 95%;
        margin: 0 auto 20px;
    }

    @@media (max-width: 1400px) {
        .rate-form-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .rate-form-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media screen and (min-width: 1200px) {
        .rate-create-container {
            max-width: 98%;
        }
        
        .rate-form-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    @@media print {
        body {
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }
        @@page {
            size: landscape;
            margin: 0.5cm;
        }
        .rate-create-container {
            max-width: 100%;
            padding: 20px;
        }
    }

    /* Weekend Rates Styles */
    .weekend-days-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
        margin-bottom: 15px;
    }

    .weekend-day-item {
        display: flex;
        flex-direction: column;
        gap: 8px;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
        border: 2px solid #e9ecef;
    }

    .day-checkbox {
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        color: #495057;
        cursor: pointer;
        margin-bottom: 5px;
    }

    .day-checkbox input[type="checkbox"] {
        width: 18px;
        height: 18px;
        cursor: pointer;
    }

    .weekend-rate-input {
        padding: 8px 12px;
        border: 1px solid #ced4da;
        border-radius: 6px;
        font-size: 13px;
    }

    .weekend-rate-input:enabled {
        background: white;
    }

    .weekend-rate-input:disabled {
        background: #e9ecef;
        cursor: not-allowed;
    }

    /* Special Day Rates Styles */
    .special-day-row {
        display: grid;
        grid-template-columns: 160px 160px 1fr 1fr 1fr 50px;
        gap: 12px;
        align-items: end;
        margin-bottom: 12px;
        padding: 12px;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .special-day-field {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .special-day-field label {
        font-size: 12px;
        font-weight: 500;
        color: #495057;
    }

    .special-day-field input {
        padding: 8px 12px;
        border: 1px solid #ced4da;
        border-radius: 6px;
        font-size: 13px;
    }

    .btn-add-special-day {
        padding: 10px 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 10px;
    }

    .btn-add-special-day:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }

    .btn-remove-special-day {
        padding: 8px 12px;
        background: #dc3545;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
    }

    .btn-remove-special-day:hover {
        background: #c82333;
    }

    @@media (max-width: 1200px) {
        .weekend-days-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .special-day-row {
            grid-template-columns: repeat(2, 1fr);
            gap: 8px;
        }
        
        .special-day-row .special-day-field:last-child {
            grid-column: span 2;
        }
    }

    @@media (max-width: 768px) {
        .weekend-days-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="page-header">
    <h2><i class="fas fa-tags"></i> Rate Master</h2>
</div>

<div class="rate-create-container">
    <div class="rate-create-header">
        <h3><i class="fas fa-plus-circle"></i> Add New Rate</h3>
    </div>
    
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <!-- Basic Rate Information Section -->
        <div class="rate-form-section">
            <div class="section-title">
                <i class="fas fa-info-circle"></i>
                Basic Rate Information
            </div>
            <div class="rate-form-grid">
                <div class="rate-form-group">
                    <label asp-for="RoomTypeId">Room Type <span class="text-danger">*</span></label>
                    <select asp-for="RoomTypeId" required>
                        <option value="">-- Select Room Type --</option>
                        @foreach (var roomType in roomTypes ?? Enumerable.Empty<HotelApp.Web.Models.RoomType>())
                        {
                            <option value="@roomType.Id">@roomType.TypeName</option>
                        }
                    </select>
                    <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                </div>

                <div class="rate-form-group">
                    <label asp-for="CustomerType">Customer Type <span class="text-danger">*</span></label>
                    <select asp-for="CustomerType" required>
                        <option value="">-- Select Customer Type --</option>
                        <option value="B2C">B2C</option>
                        <option value="B2B">B2B</option>
                    </select>
                    <span asp-validation-for="CustomerType" class="text-danger"></span>
                </div>

                <div class="rate-form-group">
                    <label asp-for="Source">Source <span class="text-danger">*</span></label>
                    <select asp-for="Source" required>
                        <option value="">-- Select Source --</option>
                        <option value="WalkIn">WalkIn</option>
                        <option value="Phone">Phone</option>
                        <option value="Websites">Websites</option>
                        <option value="OTA">OTA</option>
                        <option value="Reference">Reference</option>
                    </select>
                    <span asp-validation-for="Source" class="text-danger"></span>
                </div>

                <div class="rate-form-group">
                    <label asp-for="BaseRate">Base Rate (₹) <span class="text-danger">*</span></label>
                    <input asp-for="BaseRate" type="number" step="0.01" placeholder="0" required />
                    <span asp-validation-for="BaseRate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Pricing & Tax Section -->
        <div class="rate-form-section">
            <div class="section-title">
                <i class="fas fa-money-bill-wave"></i>
                Pricing & Tax Details
            </div>
            <div class="rate-form-grid">
                <div class="rate-form-group">
                    <label asp-for="ExtraPaxRate">Extra Pax Rate (₹) <span class="text-danger">*</span></label>
                    <input asp-for="ExtraPaxRate" type="number" step="0.01" placeholder="0" required />
                    <span asp-validation-for="ExtraPaxRate" class="text-danger"></span>
                </div>

                <div class="rate-form-group">
                    <label asp-for="TaxPercentage">Tax % <span class="text-danger">*</span></label>
                    <input asp-for="TaxPercentage" type="number" step="0.01" placeholder="0" required />
                    <span asp-validation-for="TaxPercentage" class="text-danger"></span>
                </div>

                <div class="rate-form-group">
                    <label asp-for="StartDate">Start Date <span class="text-danger">*</span></label>
                    <input asp-for="StartDate" type="date" required />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="rate-form-group">
                    <label asp-for="EndDate">End Date <span class="text-danger">*</span></label>
                    <input asp-for="EndDate" type="date" required />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Additional Settings Section -->
        <div class="rate-form-section">
            <div class="section-title">
                <i class="fas fa-cog"></i>
                Additional Settings
            </div>
            <div class="rate-form-grid">
                <div class="rate-form-group">
                    <label asp-for="IsWeekdayRate">Weekday Rate? <span class="text-danger">*</span></label>
                    <select asp-for="IsWeekdayRate" required>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="IsWeekdayRate" class="text-danger"></span>
                </div>

                <div class="rate-form-group">
                    <label asp-for="ApplyDiscount">Apply Discount</label>
                    <input asp-for="ApplyDiscount" type="text" placeholder="e.g., 10%" />
                    <span asp-validation-for="ApplyDiscount" class="text-danger"></span>
                </div>

                <div class="rate-form-group">
                    <label asp-for="IsDynamicRate">Dynamic Rate? <span class="text-danger">*</span></label>
                    <select asp-for="IsDynamicRate" required>
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                    <span asp-validation-for="IsDynamicRate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Weekend Rates Section -->
        <div class="rate-form-section">
            <div class="section-title">
                <i class="fas fa-calendar-week"></i>
                Weekend Rates (Optional)
                <label style="margin-left: auto; display: flex; align-items: center; gap: 8px; font-size: 14px; font-weight: normal;">
                    <input type="checkbox" id="enableWeekendRates" style="width: 18px; height: 18px;" />
                    Enable Weekend Rates
                </label>
            </div>
            <div id="weekendRatesContainer" style="display: none;">
                <div class="weekend-days-grid">
                    <div class="weekend-day-item">
                        <label class="day-checkbox">
                            <input type="checkbox" name="WeekendDays" value="Friday" class="weekend-day-check" />
                            <span>Friday</span>
                        </label>
                        <input type="number" step="0.01" placeholder="Base Rate" class="weekend-rate-input" data-day="Friday" data-type="base" disabled />
                        <input type="number" step="0.01" placeholder="Extra Pax Rate" class="weekend-rate-input" data-day="Friday" data-type="extra" disabled />
                    </div>
                    <div class="weekend-day-item">
                        <label class="day-checkbox">
                            <input type="checkbox" name="WeekendDays" value="Saturday" class="weekend-day-check" />
                            <span>Saturday</span>
                        </label>
                        <input type="number" step="0.01" placeholder="Base Rate" class="weekend-rate-input" data-day="Saturday" data-type="base" disabled />
                        <input type="number" step="0.01" placeholder="Extra Pax Rate" class="weekend-rate-input" data-day="Saturday" data-type="extra" disabled />
                    </div>
                    <div class="weekend-day-item">
                        <label class="day-checkbox">
                            <input type="checkbox" name="WeekendDays" value="Sunday" class="weekend-day-check" />
                            <span>Sunday</span>
                        </label>
                        <input type="number" step="0.01" placeholder="Base Rate" class="weekend-rate-input" data-day="Sunday" data-type="base" disabled />
                        <input type="number" step="0.01" placeholder="Extra Pax Rate" class="weekend-rate-input" data-day="Sunday" data-type="extra" disabled />
                    </div>
                </div>
                <small class="form-text text-muted">Select days and set rates. Tax percentage from main rate will apply.</small>
            </div>
        </div>

        <!-- Special Day Rates Section -->
        <div class="rate-form-section">
            <div class="section-title">
                <i class="fas fa-star"></i>
                Special Day Rates (Optional)
                <label style="margin-left: auto; display: flex; align-items: center; gap: 8px; font-size: 14px; font-weight: normal;">
                    <input type="checkbox" id="enableSpecialDayRates" style="width: 18px; height: 18px;" />
                    Enable Special Day Rates
                </label>
            </div>
            <div id="specialDayRatesContainer" style="display: none;">
                <div id="specialDaysContainer"></div>
                <button type="button" class="btn-add-special-day" onclick="addSpecialDayRow()">
                    <i class="fas fa-plus"></i> Add Special Day
                </button>
                <small class="form-text text-muted">Add specific dates for special rates (holidays, events, etc.). Tax percentage from main rate will apply.</small>
            </div>
        </div>

        <div class="rate-form-actions">
            <a asp-action="List" class="btn-cancel">
                <i class="fas fa-times"></i> Cancel
            </a>
            <button type="submit" class="btn-save">
                <i class="fas fa-save"></i> Save Rate
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Weekend Rates Toggle
        document.getElementById('enableWeekendRates').addEventListener('change', function() {
            const container = document.getElementById('weekendRatesContainer');
            container.style.display = this.checked ? 'block' : 'none';
        });

        // Weekend Day Selection
        document.querySelectorAll('.weekend-day-check').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const day = this.value;
                const inputs = document.querySelectorAll(`input.weekend-rate-input[data-day="${day}"]`);
                inputs.forEach(input => {
                    input.disabled = !this.checked;
                    if (!this.checked) {
                        input.value = '';
                    }
                });
            });
        });

        // Special Day Rates Toggle
        document.getElementById('enableSpecialDayRates').addEventListener('change', function() {
            const container = document.getElementById('specialDayRatesContainer');
            container.style.display = this.checked ? 'block' : 'none';
        });

        // Special Day Row Counter
        let specialDayCounter = 0;

        // Add Special Day Row
        function addSpecialDayRow() {
            const container = document.getElementById('specialDaysContainer');
            const row = document.createElement('div');
            row.className = 'special-day-row';
            row.id = `special-day-row-${specialDayCounter}`;
            row.innerHTML = `
                <div class="special-day-field">
                    <label>From Date <span class="text-danger">*</span></label>
                    <input type="date" name="SpecialDayRates[${specialDayCounter}].FromDate" required />
                </div>
                <div class="special-day-field">
                    <label>To Date <span class="text-danger">*</span></label>
                    <input type="date" name="SpecialDayRates[${specialDayCounter}].ToDate" required />
                </div>
                <div class="special-day-field">
                    <label>Event Name</label>
                    <input type="text" name="SpecialDayRates[${specialDayCounter}].EventName" placeholder="e.g., New Year, Christmas" />
                </div>
                <div class="special-day-field">
                    <label>Base Rate (₹) <span class="text-danger">*</span></label>
                    <input type="number" step="0.01" name="SpecialDayRates[${specialDayCounter}].BaseRate" placeholder="0" required />
                </div>
                <div class="special-day-field">
                    <label>Extra Pax Rate (₹)</label>
                    <input type="number" step="0.01" name="SpecialDayRates[${specialDayCounter}].ExtraPaxRate" placeholder="0" />
                </div>
                <div class="special-day-field">
                    <button type="button" class="btn-remove-special-day" onclick="removeSpecialDayRow(${specialDayCounter})">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            `;
            container.appendChild(row);
            specialDayCounter++;
        }

        // Remove Special Day Row
        function removeSpecialDayRow(id) {
            const row = document.getElementById(`special-day-row-${id}`);
            if (row) {
                row.remove();
            }
        }

        // Form Submit Handler
        document.querySelector('form').addEventListener('submit', function(e) {
            // Collect Weekend Rates Data
            const weekendRatesEnabled = document.getElementById('enableWeekendRates').checked;
            if (weekendRatesEnabled) {
                const checkedDays = document.querySelectorAll('.weekend-day-check:checked');
                checkedDays.forEach((checkbox, index) => {
                    const day = checkbox.value;
                    const baseRate = document.querySelector(`input.weekend-rate-input[data-day="${day}"][data-type="base"]`).value;
                    const extraRate = document.querySelector(`input.weekend-rate-input[data-day="${day}"][data-type="extra"]`).value;
                    
                    // Create hidden inputs for submission
                    const dayInput = document.createElement('input');
                    dayInput.type = 'hidden';
                    dayInput.name = `WeekendRates[${index}].DayOfWeek`;
                    dayInput.value = day;
                    this.appendChild(dayInput);
                    
                    const baseInput = document.createElement('input');
                    baseInput.type = 'hidden';
                    baseInput.name = `WeekendRates[${index}].BaseRate`;
                    baseInput.value = baseRate;
                    this.appendChild(baseInput);
                    
                    const extraInput = document.createElement('input');
                    extraInput.type = 'hidden';
                    extraInput.name = `WeekendRates[${index}].ExtraPaxRate`;
                    extraInput.value = extraRate || '0';
                    this.appendChild(extraInput);
                });
            }
        });
    </script>
}
