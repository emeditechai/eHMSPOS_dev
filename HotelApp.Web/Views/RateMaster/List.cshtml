@model IEnumerable<HotelApp.Web.Models.RateMaster>
@{
    ViewData["Title"] = "Rate Master";
}

<div class="page-header">
    <h2><i class="fas fa-tags"></i> Rate Master</h2>
    <a asp-action="Create" class="btn-create">
        <i class="fas fa-plus"></i> Add New Rate
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        @TempData["SuccessMessage"]
    </div>
}

@if (Model.Any())
{
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Room Type</th>
                    <th>Customer Type</th>
                    <th>Source</th>
                    <th>Base Rate</th>
                    <th>Extra Pax Rate</th>
                    <th>Tax %</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Weekday Rate?</th>
                    <th>Apply Discount</th>
                    <th>Dynamic Rate?</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rate in Model)
                {
                    <tr>
                        <td><strong>@rate.RoomType?.TypeName</strong></td>
                        <td>@rate.CustomerType</td>
                        <td>@rate.Source</td>
                        <td>₹@rate.BaseRate.ToString("N0")</td>
                        <td>₹@rate.ExtraPaxRate.ToString("N0")</td>
                        <td>@rate.TaxPercentage%</td>
                        <td>@rate.StartDate.ToString("dd/MM/yyyy")</td>
                        <td>@rate.EndDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (rate.IsWeekdayRate)
                            {
                                <span class="badge badge-active"><i class="fas fa-check"></i> Yes</span>
                            }
                            else
                            {
                                <span class="badge badge-inactive"><i class="fas fa-times"></i> No</span>
                            }
                        </td>
                        <td>@(rate.ApplyDiscount ?? "-")</td>
                        <td>
                            @if (rate.IsDynamicRate)
                            {
                                <span class="badge badge-active"><i class="fas fa-check"></i> Yes</span>
                            }
                            else
                            {
                                <span class="badge badge-inactive"><i class="fas fa-times"></i> No</span>
                            }
                        </td>
                        <td>
                            @if (rate.IsActive)
                            {
                                <span class="badge badge-available">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-maintenance">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@rate.Id" class="btn-edit">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@rate.Id" method="post" style="display:inline;" 
                                      onsubmit="return confirm('Are you sure you want to delete this rate?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn-delete">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-tags"></i>
        <h3>No Rates Found</h3>
        <p>Get started by adding your first rate configuration</p>
        <a asp-action="Create" class="btn-create">
            <i class="fas fa-plus"></i> Add New Rate
        </a>
    </div>
}
