@model HotelApp.Web.Models.RoomType
@{
    ViewData["Title"] = "Create Room Type";
}

<div class="page-header">
    <h2><i class="fas fa-cube"></i> Room Type Master</h2>
</div>

<div class="form-container">
    <h3 style="margin-bottom: 25px; color: var(--primary);">Add New Room Type</h3>
    
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="TypeName">Type Name <span class="text-danger">*</span></label>
                <input asp-for="TypeName" type="text" placeholder="e.g., Deluxe" required />
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaxOccupancy">Max Occupancy <span class="text-danger">*</span></label>
                <input asp-for="MaxOccupancy" type="number" min="1" placeholder="e.g., 2" required />
                <span asp-validation-for="MaxOccupancy" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IsActive">Status</label>
                <select asp-for="IsActive">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group form-group-full">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" placeholder="e.g., Spacious room with king-size bed"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group form-group-full">
                <label asp-for="Amenities">Amenities</label>
                <textarea asp-for="Amenities" placeholder="e.g., AC, WiFi, TV, Mini Bar"></textarea>
                <span asp-validation-for="Amenities" class="text-danger"></span>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-save">
                <i class="fas fa-save"></i> Save Room Type
            </button>
            <a asp-action="List" class="btn-cancel">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
