@model IEnumerable<HotelApp.Web.Models.RoomType>
@{
    ViewData["Title"] = "Room Type Master";
}

<div class="page-header">
    <h2><i class="fas fa-cube"></i> Room Type Master</h2>
    <a asp-action="Create" class="btn-create">
        <i class="fas fa-plus"></i> Add New Room Type
    </a>
</div>

@if (Model.Any())
{
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Type Name</th>
                    <th>Description</th>
                    <th>Max Occupancy</th>
                    <th>Max Room Availability</th>
                    <th>Amenities</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var roomType in Model)
                {
                    <tr>
                        <td><strong>@roomType.TypeName</strong></td>
                        <td>@(roomType.Description ?? "-")</td>
                        <td>@roomType.MaxOccupancy</td>
                        <td>@(roomType.Max_RoomAvailability?.ToString() ?? "-")</td>
                        <td>@(roomType.Amenities ?? "-")</td>
                        <td>
                            @if (roomType.IsActive)
                            {
                                <span class="badge badge-available">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-maintenance">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@roomType.Id" class="btn-action btn-view" title="View Room Type">
                                    <i class="fas fa-eye"></i>
                                    <span>View</span>
                                </a>
                                <a asp-action="Edit" asp-route-id="@roomType.Id" class="btn-action btn-edit" title="Edit Room Type">
                                    <i class="fas fa-pen"></i>
                                    <span>Edit</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-cube"></i>
        <h3>No Room Types Found</h3>
        <p>Get started by adding your first room type</p>
        <a asp-action="Create" class="btn-create">
            <i class="fas fa-plus"></i> Add New Room Type
        </a>
    </div>
}
