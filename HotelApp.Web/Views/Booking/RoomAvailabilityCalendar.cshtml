        .legend-color.medium { background: linear-gradient(135deg, #f59e0b, #d97706); }
        .legend-color.low { background: linear-gradient(135deg, #ef4444, #dc2626); }
        .legend-color.full { background: linear-gradient(135deg, #6b7280, #4b5563); }
        
