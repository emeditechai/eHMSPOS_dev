@model IReadOnlyList<HotelApp.Web.Models.CancellationPolicy>
@{
    ViewData["Title"] = "Cancellation Policies";
}

<div class="page-header">
    <h2><i class="fas fa-ban"></i> Cancellation Policies</h2>
    <a asp-action="Create" class="btn-create">
        <i class="fas fa-plus"></i> Add Policy
    </a>
</div>

@if (Model != null && Model.Count > 0)
{
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Policy</th>
                    <th>Source</th>
                    <th>Customer</th>
                    <th>Rate Type</th>
                    <th>Valid</th>
                    <th>No-Show Refund</th>
                    <th>Approval</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var p in Model)
            {
                var statusBadgeClass = p.IsActive ? "badge-available" : "badge-maintenance";
                <tr>
                    <td><strong>@p.PolicyName</strong></td>
                    <td>@p.BookingSource</td>
                    <td>@p.CustomerType</td>
                    <td>@p.RateType</td>
                    <td>
                        @if (p.ValidFrom.HasValue || p.ValidTo.HasValue)
                        {
                            <span>
                                @(p.ValidFrom?.ToString("dd MMM yyyy") ?? "-")
                                -
                                @(p.ValidTo?.ToString("dd MMM yyyy") ?? "-")
                            </span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                    <td>@(p.NoShowRefundAllowed ? "Yes" : "No")</td>
                    <td>@(p.ApprovalRequired ? "Required" : "No")</td>
                    <td><span class="badge @statusBadgeClass">@(p.IsActive ? "Active" : "Inactive")</span></td>
                    <td>
                        <div class="action-buttons">
                            <a asp-action="Edit" asp-route-id="@p.Id" class="btn-action btn-edit" title="Edit">
                                <i class="fas fa-pen"></i>
                                <span>Edit</span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-ban"></i>
        <h3>No Policies Found</h3>
        <p>Create your first cancellation policy for this branch.</p>
        <a asp-action="Create" class="btn-create">
            <i class="fas fa-plus"></i> Add Policy
        </a>
    </div>
}
