@model List<HotelApp.Web.ViewModels.MenuNodeViewModel>

@if (Model == null || Model.Count == 0)
{
    <div class="text-muted">No menu items found.</div>
}
else
{
    <ul style="list-style:none; padding-left: 0; margin: 0;">
        @foreach (var node in Model)
        {
            <li style="padding: 8px 0; border-bottom: 1px solid #f1f1f1;">
                <div data-menu-node style="display:flex; align-items:center; gap:10px;">
                    <input type="checkbox" name="SelectedMenuIds" value="@node.Id" @(node.IsAssigned ? "checked" : "") />
                    <div style="display:flex; align-items:center; gap:10px; flex:1;">
                        @if (!string.IsNullOrWhiteSpace(node.IconClass))
                        {
                            <i class="@node.IconClass" style="min-width: 18px;"></i>
                        }
                        <div>
                            <div style="font-weight:600;">@node.Title</div>
                            @if (!string.IsNullOrWhiteSpace(node.Controller) && !string.IsNullOrWhiteSpace(node.Action))
                            {
                                <div class="text-muted" style="font-size: 12px;">@node.Controller/@node.Action</div>
                            }
                        </div>
                    </div>
                </div>

                @if (node.Children != null && node.Children.Count > 0)
                {
                    <div data-menu-children style="padding-left: 28px; padding-top: 6px;">
                        <partial name="_MenuTree" model="node.Children" />
                    </div>
                }
            </li>
        }
    </ul>
}
