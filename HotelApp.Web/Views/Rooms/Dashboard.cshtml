</div>

@section Scripts {
    <script>
        let selectedRoomId = null;
        let currentDate = new Date();

        // Calendar Functions
        function renderCalendar() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            
            // Update titles
            const monthNames = ["January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"];
            const monthYearText = `${monthNames[month]} ${year}`;
            document.getElementById('calendarTitle').textContent = monthYearText;
            document.getElementById('calendarMonth').textContent = monthYearText;
            
            // Get calendar grid
            const calendarGrid = document.getElementById('calendarGrid');
            calendarGrid.innerHTML = '';
            
            // Add day headers
            const daysOfWeek = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
            daysOfWeek.forEach((day, index) => {
                const header = document.createElement('div');
                header.className = 'calendar-header';
                if (index === 0) header.classList.add('sunday');
                if (index === 6) header.classList.add('saturday');
                header.textContent = day;
                calendarGrid.appendChild(header);
            });
            
            // Get first day of month and days in month
            const firstDay = new Date(year, month, 1);
            const lastDay = new Date(year, month + 1, 0);
            const daysInMonth = lastDay.getDate();
            const startDayOfWeek = firstDay.getDay();
            
            // Add empty cells for days before month starts
            for (let i = 0; i < startDayOfWeek; i++) {
                const emptyDay = document.createElement('div');
                emptyDay.className = 'calendar-day';
                calendarGrid.appendChild(emptyDay);
            }
            
            // Add days of the month
            const today = new Date();
            for (let day = 1; day <= daysInMonth; day++) {
                const dayCell = document.createElement('div');
                dayCell.className = 'calendar-day';
                
                // Check if this is today
                if (year === today.getFullYear() && 
                    month === today.getMonth() && 
                    day === today.getDate()) {
                    dayCell.classList.add('today');
                }
                
                // Add weekend classes
                const currentDay = new Date(year, month, day);
                const dayOfWeek = currentDay.getDay();
                if (dayOfWeek === 0) dayCell.classList.add('sunday');
                if (dayOfWeek === 6) dayCell.classList.add('saturday');
                
                dayCell.textContent = day;
                calendarGrid.appendChild(dayCell);
            }
        }

        function changeMonth(direction) {
            currentDate.setMonth(currentDate.getMonth() + direction);
            renderCalendar();
        }

        // Initialize calendar on page load
        document.addEventListener('DOMContentLoaded', function() {
            renderCalendar();
            
            // Set min date for date inputs to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('startDate').min = today;
            document.getElementById('endDate').min = today;
        });
        
        // Update availability based on date range selection
        function updateAvailability() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            
            if (!startDate || !endDate) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Missing Dates',
                    text: 'Please select both start and end dates'
                });
                return;
            }
            
            if (new Date(endDate) < new Date(startDate)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Date Range',
                    text: 'End date must be after start date'
                });
                return;
            }
            
            // Show loading state
            const availabilityCards = document.getElementById('availabilityCards');
            availabilityCards.innerHTML = '<div style="text-align: center; padding: 40px; width: 100%;"><i class="fas fa-spinner fa-spin fa-3x" style="color: #667eea;"></i><p style="margin-top: 16px; color: #666;">Loading availability data...</p></div>';
            
            // Fetch availability data
            fetch(`@Url.Action("GetAvailabilityByDateRange", "Rooms")?startDate=${startDate}&endDate=${endDate}`)
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        displayAvailabilityCards(result.data);
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: result.message || 'Failed to load availability data'
                        });
                        availabilityCards.innerHTML = '<div style="text-align: center; padding: 40px; width: 100%; color: #dc3545;"><i class="fas fa-exclamation-circle fa-3x"></i><p style="margin-top: 16px;">Failed to load availability data</p></div>';
                    }
                })
                .catch(error => {
                    console.error('Error fetching availability:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to connect to server'
                    });
                    availabilityCards.innerHTML = '<div style="text-align: center; padding: 40px; width: 100%; color: #dc3545;"><i class="fas fa-exclamation-circle fa-3x"></i><p style="margin-top: 16px;">Failed to connect to server</p></div>';
                });
        }
        
        // Display availability cards dynamically
        function displayAvailabilityCards(data) {
            const availabilityCards = document.getElementById('availabilityCards');
            
            if (!data || data.length === 0) {
                availabilityCards.innerHTML = '<div style="text-align: center; padding: 40px; width: 100%; color: #666;"><i class="fas fa-info-circle fa-3x"></i><p style="margin-top: 16px;">No room types available</p></div>';
                return;
            }
            
            let cardsHtml = '';
            data.forEach(roomType => {
                const occupancyPercentage = roomType.totalRooms > 0 
                    ? (roomType.occupiedRooms * 100.0 / roomType.totalRooms).toFixed(0) 
                    : 0;
                
                const availableRoomsHtml = roomType.availableRoomNumbers && roomType.availableRoomNumbers.length > 0
                    ? `<div class="available-rooms-list">
                        <span class="list-label">Available Rooms:</span>
                        <span class="room-numbers">${roomType.availableRoomNumbers.join(', ')}</span>
                       </div>`
                    : '';
                
                const discountBadge = roomType.applyDiscount && parseFloat(roomType.applyDiscount) > 0
                    ? `<span class="discount-badge">${roomType.applyDiscount}% OFF</span>`
                    : '';
                
                cardsHtml += `
                    <div class="availability-card">
                        <div class="availability-card-header">
                            <h3>${roomType.roomTypeName}</h3>
                            <div>
                                <span class="rate-badge">₹${roomType.baseRate.toLocaleString()} / night</span>
                                ${discountBadge}
                            </div>
                        </div>
                        <div class="availability-stats">
                            <div class="stat-item">
                                <div class="stat-label">Total Rooms</div>
                                <div class="stat-value">${roomType.totalRooms}</div>
                            </div>
                            <div class="stat-item available">
                                <div class="stat-label">Available</div>
                                <div class="stat-value">${roomType.availableRooms}</div>
                            </div>
                            <div class="stat-item occupied">
                                <div class="stat-label">Occupied</div>
                                <div class="stat-value">${roomType.occupiedRooms}</div>
                            </div>
                        </div>
                        <div class="availability-progress">
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: ${occupancyPercentage}%"></div>
                            </div>
                            <div class="progress-label">${occupancyPercentage}% Occupied</div>
                        </div>
                        ${availableRoomsHtml}
                        <div class="availability-footer">
                            <i class="fas fa-users"></i>
                            Max Occupancy: ${roomType.maxOccupancy} persons
                        </div>
                    </div>
                `;
            });
            
            availabilityCards.innerHTML = cardsHtml;
        }

        function selectRoom(roomId) {
            selectedRoomId = roomId;
            
            // Remove previous selection
            document.querySelectorAll('.room-card').forEach(card => {
                card.style.boxShadow = '';
                card.style.transform = '';
            });
            
            // Highlight selected room
            const selectedCard = document.querySelector(`.room-card[data-room-id="${roomId}"]`);
            if (selectedCard) {
                selectedCard.style.boxShadow = '0 0 0 3px #4A90E2';
                selectedCard.style.transform = 'scale(1.05)';
            }

            // Fetch and display room details
            fetch(`@Url.Action("GetRoomDetails", "Rooms")?roomId=${roomId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById('roomNumber').textContent = data.room.roomNumber;
                        document.getElementById('roomType').textContent = data.room.roomType;
                        document.getElementById('roomStatus').textContent = data.room.status;
                        document.getElementById('roomFloor').textContent = data.room.floor;
                        document.getElementById('roomRate').textContent = '₹' + data.room.baseRate.toLocaleString();
                        document.getElementById('roomOccupancy').textContent = data.room.maxOccupancy + ' persons';
                        
                        // Show appropriate button based on room status
                        const btnCheckIn = document.getElementById('btnCheckIn');
                        const btnCheckOut = document.getElementById('btnCheckOut');
                        
                        if (data.room.status === 'Occupied') {
                            btnCheckIn.style.display = 'none';
                            btnCheckOut.style.display = 'block';
                        } else if (data.room.status === 'Available') {
                            btnCheckIn.style.display = 'block';
                            btnCheckOut.style.display = 'none';
                        } else {
                            // For Cleaning and Maintenance, hide both
                            btnCheckIn.style.display = 'none';
                            btnCheckOut.style.display = 'none';
                        }
                        
                        document.getElementById('roomActions').style.display = 'flex';
                    }
                })
                .catch(error => {
                    console.error('Error fetching room details:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to load room details'
                    });
                });
        }

        function toggleActions(roomId) {
            // Close all other dropdowns
            document.querySelectorAll('.room-actions-dropdown').forEach(dropdown => {
                if (dropdown.id !== `actions-${roomId}`) {
                    dropdown.classList.remove('show');
                }
            });
            
            // Toggle current dropdown
            const dropdown = document.getElementById(`actions-${roomId}`);
            dropdown.classList.toggle('show');
        }

        function updateRoomStatus(roomId, status) {
            console.log('updateRoomStatus called:', { roomId, status });
            
            if (!status || status === 'undefined') {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Invalid status value'
                });
                return;
            }
            
            Swal.fire({
                title: 'Confirm Status Change',
                text: `Are you sure you want to mark this room as ${status}?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#4A90E2',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, update it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('@Url.Action("UpdateRoomStatus", "Rooms")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ roomId: roomId, status: status })
                    })
                    .then(response => response.json())
                    .then(data => {
                        console.log('Response:', data);
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: data.message,
                                timer: 1500
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: data.message
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error updating room status:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Failed to update room status: ' + error.message
                        });
                    });
                }
            });
        }

        function checkInRoom() {
            if (selectedRoomId) {
                window.location.href = `@Url.Action("Create", "Booking")?roomId=${selectedRoomId}`;
            }
        }

        function checkOutRoom() {
            if (!selectedRoomId) {
                Swal.fire({
                    icon: 'warning',
                    title: 'No Room Selected',
                    text: 'Please select a room first'
                });
                return;
            }
            
            console.log('checkOutRoom called for roomId:', selectedRoomId);
            
            Swal.fire({
                title: 'Checkout Confirmation',
                text: 'Are you sure you want to check out this room?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, checkout!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show loading
                    Swal.fire({
                        title: 'Processing...',
                        text: 'Checking payment status and processing checkout',
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    // Call checkout endpoint with payment verification
                    fetch('@Url.Action("CheckoutRoom", "Rooms")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ roomId: selectedRoomId })
                    })
                    .then(response => {
                        console.log('Response status:', response.status);
                        return response.json();
                    })
                    .then(data => {
                        console.log('Checkout response:', data);
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Checkout Successful',
                                text: data.message,
                                timer: 2000
                            }).then(() => {
                                location.reload();
                            });
                        } else if (data.requiresPayment) {
                            // Payment not cleared - show alert and redirect to payment
                            Swal.fire({
                                icon: 'warning',
                                title: 'Payment Not Cleared',
                                html: `
                                    <p><strong>Booking:</strong> ${data.bookingNumber}</p>
                                    <p><strong>Balance Amount:</strong> ₹${data.balanceAmount.toLocaleString()}</p>
                                    <p>Please clear the payment before checkout.</p>
                                `,
                                confirmButtonColor: '#4A90E2',
                                confirmButtonText: 'Go to Payment'
                            }).then(() => {
                                // Redirect to booking details page where payment can be made
                                window.location.href = '@Url.Action("Details", "Booking")?bookingNumber=' + data.bookingNumber;
                            });
                        } else {
                            // Check if booking not found - offer force checkout
                            if (data.message && data.message.includes('No active booking found')) {
                                Swal.fire({
                                    icon: 'warning',
                                    title: 'Booking Expired',
                                    html: `
                                        <p>The checkout date for this booking has passed.</p>
                                        <p>Would you like to <strong>Force Checkout</strong>?</p>
                                    `,
                                    showCancelButton: true,
                                    confirmButtonColor: '#dc3545',
                                    cancelButtonColor: '#6c757d',
                                    confirmButtonText: 'Force Checkout'
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        forceCheckoutRoom(selectedRoomId);
                                    }
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Checkout Failed',
                                    text: data.message
                                });
                            }
                        }
                    })
                    .catch(error => {
                        console.error('Error checking out room:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Failed to check out room: ' + error.message
                        });
                    });
                }
            });
        }

        function forceCheckoutRoom(roomId) {
            console.log('forceCheckoutRoom called for roomId:', roomId);
            
            // Show loading
            Swal.fire({
                title: 'Processing...',
                text: 'Checking payment status and processing force checkout',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            // Call force checkout endpoint with payment verification
            fetch('@Url.Action("ForceCheckoutRoom", "Rooms")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ roomId: roomId })
            })
            .then(response => {
                console.log('Force checkout response status:', response.status);
                return response.json();
            })
            .then(data => {
                console.log('Force checkout response:', data);
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Force Checkout Successful',
                        text: data.message,
                        timer: 2000
                    }).then(() => {
                        location.reload();
                    });
                } else if (data.requiresPayment) {
                    // Payment not cleared - show alert and redirect to payment
                    Swal.fire({
                        icon: 'error',
                        title: 'Payment Required',
                        html: `
                            <p><strong>Booking:</strong> ${data.bookingNumber}</p>
                            <p><strong>Checkout Date:</strong> ${new Date(data.checkOutDate).toLocaleDateString()}</p>
                            <p><strong>Balance Amount:</strong> ₹${data.balanceAmount.toLocaleString()}</p>
                            <p style="color: #dc3545; font-weight: bold; margin-top: 10px;">
                                Payment must be cleared before force checkout!
                            </p>
                        `,
                        showCancelButton: true,
                        confirmButtonColor: '#4A90E2',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: 'Go to Payment',
                        cancelButtonText: 'Cancel'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Redirect to booking details page where payment can be made
                            window.location.href = '@Url.Action("Details", "Booking")?bookingNumber=' + data.bookingNumber;
                        }
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Force Checkout Failed',
                        text: data.message
                    });
                }
            })
            .catch(error => {
                console.error('Error force checking out room:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to force check out room: ' + error.message
                });
            });
        }

        function maintenanceRoom() {
            if (selectedRoomId) {
                updateRoomStatus(selectedRoomId, 'Maintenance');
            }
        }

        function checkoutRoomFromMenu(roomId) {
            // Set the selected room
            selectedRoomId = roomId;
            
            // Highlight the room card
            document.querySelectorAll('.room-card').forEach(card => card.classList.remove('selected'));
            const roomCard = document.querySelector(`.room-card[onclick*="${roomId}"]`);
            if (roomCard) {
                roomCard.classList.add('selected');
            }
            
            // Close the dropdown
            const dropdown = document.getElementById(`actions-${roomId}`);
            if (dropdown) {
                dropdown.classList.remove('show');
            }
            
            // Call the checkout function
            checkOutRoom();
        }

        // Floor tabs functionality
        document.querySelectorAll('.floor-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                // Update active tab
                document.querySelectorAll('.floor-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                
                // Filter rooms by floor
                const floorId = this.getAttribute('data-floor');
                document.querySelectorAll('.room-card').forEach(card => {
                    if (floorId === 'all' || card.getAttribute('data-floor') === floorId) {
                        card.style.display = 'flex';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.room-actions-menu')) {
                document.querySelectorAll('.room-actions-dropdown').forEach(dropdown => {
                    dropdown.classList.remove('show');
                });
            }
        });

        // Collapsible Room Availability by Type Section
        function toggleAvailabilitySection() {
            const availabilityCards = document.getElementById('availabilityCards');
            const toggleIcon = document.getElementById('availabilityToggleIcon');
            
            if (availabilityCards.style.maxHeight && availabilityCards.style.maxHeight !== '0px') {
                // Collapse
                availabilityCards.style.maxHeight = '0px';
                availabilityCards.style.opacity = '0';
                availabilityCards.style.marginTop = '0';
                toggleIcon.style.transform = 'rotate(-90deg)';
            } else {
                // Expand
                availabilityCards.style.maxHeight = availabilityCards.scrollHeight + 'px';
                availabilityCards.style.opacity = '1';
                availabilityCards.style.marginTop = '20px';
                toggleIcon.style.transform = 'rotate(0deg)';
            }
        }

        // Initialize the section as expanded on page load
        document.addEventListener('DOMContentLoaded', function() {
            const availabilityCards = document.getElementById('availabilityCards');
            if (availabilityCards) {
                availabilityCards.style.maxHeight = availabilityCards.scrollHeight + 'px';
                availabilityCards.style.opacity = '1';
            }
        });
    </script>
}
