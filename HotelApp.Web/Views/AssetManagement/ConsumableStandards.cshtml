@model IEnumerable<HotelApp.Web.Models.AssetConsumableStandard>
@{
    ViewData["Title"] = "Consumable Standards";
}

<div class="page-header">
    <h2><i class="fas fa-bottle-droplet"></i> Consumable Standards</h2>
    <a asp-action="UpsertConsumableStandard" class="btn-create">
        <i class="fas fa-plus"></i> Add / Update Standard
    </a>
</div>

@if (Model.Any())
{
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Per Room/Day</th>
                    <th>Per Stay</th>
                    <th>Status</th>
                    <th style="width: 140px;">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var row in Model)
            {
                <tr>
                    <td><strong>@row.ItemName</strong> <span class="text-muted">(@row.ItemCode)</span></td>
                    <td>@row.PerRoomPerDayQty.ToString("0.##")</td>
                    <td>@row.PerStayQty.ToString("0.##")</td>
                    <td>
                        @if (row.IsActive)
                        {
                            <span class="badge badge-available">Active</span>
                        }
                        else
                        {
                            <span class="badge badge-maintenance">Inactive</span>
                        }
                    </td>
                    <td>
                        <div class="action-buttons">
                            <a asp-action="ConsumableStandardDetails" asp-route-id="@row.Id" class="btn-action btn-view" title="View">
                                <i class="fas fa-eye"></i>
                                <span>View</span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-bottle-droplet"></i>
        <h3>No Standards Found</h3>
        <p>Add consumable standards for auto usage/deduction.</p>
        <a asp-action="UpsertConsumableStandard" class="btn-create">
            <i class="fas fa-plus"></i> Add / Update Standard
        </a>
    </div>
}
