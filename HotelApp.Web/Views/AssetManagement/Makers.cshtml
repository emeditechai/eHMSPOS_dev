@model IEnumerable<HotelApp.Web.Models.AssetMaker>
@{
    ViewData["Title"] = "Asset Makers";
}

<div class="page-header">
    <h2><i class="fas fa-industry"></i> Asset Makers</h2>
    <a asp-action="CreateMaker" class="btn-create">
        <i class="fas fa-plus"></i> Add Maker
    </a>
</div>

@if (Model.Any())
{
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th style="width: 140px;">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var row in Model)
            {
                <tr>
                    <td><strong>@row.Name</strong></td>
                    <td>
                        @if (row.IsActive)
                        {
                            <span class="badge badge-available">Active</span>
                        }
                        else
                        {
                            <span class="badge badge-maintenance">Inactive</span>
                        }
                    </td>
                    <td>
                        <div class="action-buttons">
                            <a asp-action="MakerDetails" asp-route-id="@row.Id" class="btn-action btn-view" title="View">
                                <i class="fas fa-eye"></i>
                                <span>View</span>
                            </a>
                            <a asp-action="EditMaker" asp-route-id="@row.Id" class="btn-action btn-edit" title="Edit">
                                <i class="fas fa-pen"></i>
                                <span>Edit</span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-industry"></i>
        <h3>No Makers Found</h3>
        <p>Add makers (Samsung, Carrier, Hitachi, TVS, etc.).</p>
        <a asp-action="CreateMaker" class="btn-create">
            <i class="fas fa-plus"></i> Add Maker
        </a>
    </div>
}
