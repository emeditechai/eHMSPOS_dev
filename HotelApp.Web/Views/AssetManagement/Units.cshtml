@model IEnumerable<HotelApp.Web.Models.AssetUnit>
@{
    ViewData["Title"] = "Asset Units";
}

<div class="page-header">
    <h2><i class="fas fa-ruler"></i> Asset Units</h2>
    <a asp-action="CreateUnit" class="btn-create">
        <i class="fas fa-plus"></i> Add Unit
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        @TempData["SuccessMessage"]
    </div>
}

@if (Model.Any())
{
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th style="width: 140px;">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var row in Model)
            {
                <tr>
                    <td><strong>@row.Name</strong></td>
                    <td>
                        @if (row.IsActive)
                        {
                            <span class="badge badge-available">Active</span>
                        }
                        else
                        {
                            <span class="badge badge-maintenance">Inactive</span>
                        }
                    </td>
                    <td>
                        <div class="action-buttons">
                            <a asp-action="UnitDetails" asp-route-id="@row.Id" class="btn-action btn-view" title="View">
                                <i class="fas fa-eye"></i>
                                <span>View</span>
                            </a>
                            <a asp-action="EditUnit" asp-route-id="@row.Id" class="btn-action btn-edit" title="Edit">
                                <i class="fas fa-pen"></i>
                                <span>Edit</span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-ruler"></i>
        <h3>No Units Found</h3>
        <p>Add units (Nos, Pcs, Bottle, etc.).</p>
        <a asp-action="CreateUnit" class="btn-create">
            <i class="fas fa-plus"></i> Add Unit
        </a>
    </div>
}
