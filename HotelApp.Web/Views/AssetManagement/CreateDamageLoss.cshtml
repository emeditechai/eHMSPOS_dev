@model HotelApp.Web.ViewModels.AssetDamageLossCreateViewModel
@{
    ViewData["Title"] = "Log Damage/Loss";
}

<div class="page-header">
    <h2><i class="fas fa-plus"></i> Log Damage/Loss</h2>
</div>

<div class="master-form-container">
    <form asp-action="CreateDamageLoss" method="post" class="master-form">
        @Html.AntiForgeryToken()

        <div class="form-grid">
            <div class="form-group">
                <label asp-for="IssueType" class="form-label">Type</label>
                <select asp-for="IssueType" class="form-control" asp-items="Html.GetEnumSelectList<HotelApp.Web.Models.AssetIssueType>()"></select>
            </div>

            <div class="form-group" style="grid-column: 1 / -1;">
                <label asp-for="ItemId" class="form-label">Item</label>
                <select asp-for="ItemId" class="form-control">
                    <option value="">-- Select Item --</option>
                    @foreach (var it in Model.Items)
                    {
                        <option value="@it.Id">@it.Name (@it.Code) - @it.UnitName</option>
                    }
                </select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Qty" class="form-label"></label>
                <input asp-for="Qty" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>

            <div class="form-group" style="grid-column: 1 / -1;">
                <label asp-for="Reason" class="form-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DepartmentId" class="form-label">Department (Optional)</label>
                <select asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))">
                    <option value="">-- Select Department --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="RoomId" class="form-label">Room (Optional)</label>
                <select asp-for="RoomId" class="form-control" asp-items="@(new SelectList(Model.Rooms, "Id", "RoomNumber"))">
                    <option value="">-- Select Room --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="BookingNumber" class="form-label">Booking Number (Optional)</label>
                <input asp-for="BookingNumber" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="GuestName" class="form-label">Guest Name (Optional)</label>
                <input asp-for="GuestName" class="form-control" />
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="DamageLoss" class="btn-cancel">
                <i class="fas fa-times"></i> Cancel
            </a>
            <button type="submit" class="btn-save">
                <i class="fas fa-save"></i> Save
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
