@model IEnumerable<HotelApp.Web.Models.Amenity>
@{
    ViewData["Title"] = "Amenities Master";
}

<div class="page-header">
    <h2><i class="fas fa-concierge-bell"></i> Amenities Master</h2>
    <a asp-action="Create" class="btn-create">
        <i class="fas fa-plus"></i> Add New Amenity
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        @TempData["SuccessMessage"]
    </div>
}

@if (Model.Any())
{
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Amenity Name</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var amenity in Model)
                {
                    <tr>
                        <td><strong>@amenity.AmenityName</strong></td>
                        <td>
                            @if (amenity.IsActive)
                            {
                                <span class="badge badge-available">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-maintenance">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@amenity.Id" class="btn-action btn-view" title="View Amenity">
                                    <i class="fas fa-eye"></i>
                                    <span>View</span>
                                </a>
                                <a asp-action="Edit" asp-route-id="@amenity.Id" class="btn-action btn-edit" title="Edit Amenity">
                                    <i class="fas fa-pen"></i>
                                    <span>Edit</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-concierge-bell"></i>
        <h3>No Amenities Found</h3>
        <p>Get started by adding your first amenity</p>
        <a asp-action="Create" class="btn-create">
            <i class="fas fa-plus"></i> Add New Amenity
        </a>
    </div>
}
