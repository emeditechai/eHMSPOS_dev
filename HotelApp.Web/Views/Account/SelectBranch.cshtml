@model HotelApp.Web.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>eLUX Stay | Select Branch</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="welcome-section">
            <h1>Welcome, @Model.Username!</h1>
            <p>Your credentials have been verified successfully. Please select the branch you want to access for this session.</p>
            <ul class="features">
                <li><i class="fas fa-check-circle"></i> Credentials verified</li>
                <li><i class="fas fa-check-circle"></i> Multi-branch access</li>
                <li><i class="fas fa-check-circle"></i> Secure session</li>
                <li><i class="fas fa-check-circle"></i> Branch-specific data</li>
            </ul>
        </div>
        
        <div class="login-section">
            <div class="logo">
                <h2>eLUX <span>Stay</span></h2>
            </div>
            
            <div class="login-form">
                <h3>Select Branch</h3>
                <p style="color: #666; margin-bottom: 20px;">Choose the branch you want to work with</p>
                
                <form asp-action="SelectBranch" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ReturnUrl" />
                    
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@err.ErrorMessage</div>
                            }
                        </div>
                    }
                    
                    <div class="form-group">
                        <label asp-for="BranchID">Available Branches</label>
                        <div class="input-with-icon">
                            <i class="fas fa-building"></i>
                            <select asp-for="BranchID" class="form-select" required autofocus>
                                <option value="0">-- Select Branch --</option>
                                @if (Model.AvailableBranches != null)
                                {
                                    foreach (var branch in Model.AvailableBranches)
                                    {
                                        <option value="@branch.BranchID">@branch.BranchName - @branch.City</option>
                                    }
                                }
                            </select>
                        </div>
                        <span asp-validation-for="BranchID" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="login-btn">Continue to Dashboard</button>
                    
                    <div style="text-align: center; margin-top: 15px;">
                        <a asp-action="Login" class="forgot-password">
                            <i class="fas fa-arrow-left"></i> Back to Login
                        </a>
                    </div>
                </form>
            </div>
            
            <div class="footer-text">
                <p>Â© 2024 eLUX Stay. All rights reserved.</p>
            </div>
        </div>
    </div>
</body>
</html>
