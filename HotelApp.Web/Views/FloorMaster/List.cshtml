@model IEnumerable<HotelApp.Web.Models.Floor>
@{
    ViewData["Title"] = "Floor Master";
}

<div class="page-header">
    <h2><i class="fas fa-layer-group"></i> Floor Master</h2>
    <a asp-action="Create" class="btn-create">
        <i class="fas fa-plus"></i> Add New Floor
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        @TempData["SuccessMessage"]
    </div>
}

@if (Model.Any())
{
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Floor Name</th>
                    <th>Status</th>
                    <th>Created Date</th>
                    <th>Last Modified</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var floor in Model)
                {
                    <tr>
                        <td><strong>@floor.FloorName</strong></td>
                        <td>
                            @if (floor.IsActive)
                            {
                                <span class="badge badge-available">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-maintenance">Inactive</span>
                            }
                        </td>
                        <td>@floor.CreatedDate.ToString("dd/MM/yyyy")</td>
                        <td>@floor.LastModifiedDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@floor.Id" class="btn-action btn-view" title="View Floor">
                                    <i class="fas fa-eye"></i>
                                    <span>View</span>
                                </a>
                                <a asp-action="Edit" asp-route-id="@floor.Id" class="btn-action btn-edit" title="Edit Floor">
                                    <i class="fas fa-pen"></i>
                                    <span>Edit</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-layer-group"></i>
        <h3>No Floors Found</h3>
        <p>Get started by adding your first floor</p>
        <a asp-action="Create" class="btn-create">
            <i class="fas fa-plus"></i> Add New Floor
        </a>
    </div>
}
