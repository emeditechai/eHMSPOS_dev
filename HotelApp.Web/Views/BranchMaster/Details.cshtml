@model HotelApp.Web.Models.Branch

@{
    ViewData["Title"] = "Branch Details";
}

<div class="page-header">
    <h2><i class="fas fa-info-circle"></i> Branch Details</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.BranchID" class="btn-primary">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="details-container">
    <div class="details-grid">
        <div class="detail-item">
            <label>Branch Code:</label>
            <div class="detail-value">
                <strong class="badge-code">@Model.BranchCode</strong>
            </div>
        </div>
        <div class="detail-item">
            <label>Branch Name:</label>
            <div class="detail-value">@Model.BranchName</div>
        </div>

        <div class="detail-item">
            <label>Country:</label>
            <div class="detail-value">@Model.Country</div>
        </div>
        <div class="detail-item">
            <label>State:</label>
            <div class="detail-value">@Model.State</div>
        </div>

        <div class="detail-item">
            <label>City:</label>
            <div class="detail-value">@Model.City</div>
        </div>
        <div class="detail-item">
            <label>Pincode:</label>
            <div class="detail-value">@Model.Pincode</div>
        </div>

        <div class="detail-item full-width">
            <label>Address:</label>
            <div class="detail-value">@Model.Address</div>
        </div>

        <div class="detail-item">
            <label>Is Head Office:</label>
            <div class="detail-value">
                @if (Model.IsHOBranch)
                {
                    <span class="status-badge status-primary">Yes</span>
                }
                else
                {
                    <span class="status-badge status-info">No</span>
                }
            </div>
        </div>
        <div class="detail-item">
            <label>Status:</label>
            <div class="detail-value">
                @if (Model.IsActive)
                {
                    <span class="status-badge status-available">Active</span>
                }
                else
                {
                    <span class="status-badge status-maintenance">Inactive</span>
                }
            </div>
        </div>

        <div class="detail-item">
            <label>Created Date:</label>
            <div class="detail-value">
                <i class="fas fa-calendar"></i> @Model.CreatedDate.ToString("dd MMM yyyy hh:mm tt")
            </div>
        </div>
        @if (Model.ModifiedDate.HasValue)
        {
            <div class="detail-item">
                <label>Last Modified Date:</label>
                <div class="detail-value">
                    <i class="fas fa-calendar-alt"></i> @Model.ModifiedDate.Value.ToString("dd MMM yyyy hh:mm tt")
                </div>
            </div>
        }
    </div>
</div>
