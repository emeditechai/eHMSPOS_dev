@model HotelApp.Web.Models.Branch

@{
    ViewData["Title"] = "Branch Details";
}

<div class="page-header">
    <h2><i class="fas fa-info-circle"></i> Branch Details</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.BranchID" class="btn-create">
            <i class="fas fa-pen"></i> Edit
        </a>
        <a asp-action="Index" class="btn-cancel" style="margin-left: 10px;">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="form-container form-readonly">
    <div class="audit-info">
        <div class="audit-item">
            <span class="audit-label">Branch Code</span>
            <span class="audit-value">@Model.BranchCode</span>
            <span class="audit-subtext">@Model.BranchName</span>
        </div>
        <div class="audit-item">
            <span class="audit-label">Status</span>
            <span class="audit-value">
                <span class="badge @(Model.IsActive ? "badge-available" : "badge-maintenance")">@(Model.IsActive ? "Active" : "Inactive")</span>
            </span>
            <span class="audit-subtext">Type: <span class="badge @(Model.IsHOBranch ? "badge-active" : "badge-cleaning")">@(Model.IsHOBranch ? "HO" : "Branch")</span></span>
        </div>
        <div class="audit-item">
            <span class="audit-label">Created</span>
            <span class="audit-value">@Model.CreatedDate.ToString("dd MMM yyyy hh:mm tt")</span>
        </div>
        <div class="audit-item">
            <span class="audit-label">Last Modified</span>
            <span class="audit-value">@(Model.ModifiedDate.HasValue ? Model.ModifiedDate.Value.ToString("dd MMM yyyy hh:mm tt") : "Never")</span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label>Branch Name</label>
            <input type="text" value="@Model.BranchName" readonly />
        </div>
        <div class="form-group">
            <label>Branch Code</label>
            <input type="text" value="@Model.BranchCode" readonly />
        </div>
        <div class="form-group">
            <label>Country</label>
            <input type="text" value="@Model.Country" readonly />
        </div>
        <div class="form-group">
            <label>State</label>
            <input type="text" value="@Model.State" readonly />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label>City</label>
            <input type="text" value="@Model.City" readonly />
        </div>
        <div class="form-group">
            <label>Pincode</label>
            <input type="text" value="@Model.Pincode" readonly />
        </div>
        <div class="form-group">
            <label>Is Head Office</label>
            <input type="text" value="@(Model.IsHOBranch ? "Yes" : "No")" readonly />
        </div>
        <div class="form-group">
            <label>Is Active</label>
            <input type="text" value="@(Model.IsActive ? "Yes" : "No")" readonly />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group form-group-full">
            <label>Address</label>
            <textarea readonly>@Model.Address</textarea>
        </div>
    </div>
</div>
