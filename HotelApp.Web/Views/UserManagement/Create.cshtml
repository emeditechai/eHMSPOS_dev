@model HotelApp.Web.ViewModels.UserCreateViewModel

@{
    ViewData["Title"] = "Create User";
}

<style>
    .user-create-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        padding: 30px 50px;
        max-width: 95%;
        width: 100%;
        margin: 0 auto;
    }

    .user-create-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #f0f0f0;
    }

    .user-create-header h3 {
        margin: 0;
        color: var(--primary);
        font-size: 24px;
        font-weight: 600;
    }

    .user-form-section {
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 16px;
        font-weight: 600;
        color: #333;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .section-title i {
        color: var(--primary);
    }

    .user-form-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px 25px;
        margin-bottom: 25px;
    }

    @@media (max-width: 1400px) {
        .user-form-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .user-form-grid {
            grid-template-columns: 1fr;
        }
    }

    .user-form-group {
        display: flex;
        flex-direction: column;
    }

    .user-form-group label {
        font-weight: 500;
        margin-bottom: 8px;
        color: #333;
        font-size: 14px;
    }

    .user-form-group input {
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .user-form-group input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(26, 42, 108, 0.1);
    }

    .selection-container {
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        padding: 20px;
        background: linear-gradient(135deg, #f9f9f9 0%, #ffffff 100%);
    }

    .checkbox-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 12px;
    }

    .checkbox-item {
        display: flex;
        align-items: center;
        padding: 12px 15px;
        background: white;
        border-radius: 8px;
        cursor: pointer;
        border: 2px solid #e8e8e8;
        transition: all 0.2s;
    }

    .checkbox-item:hover {
        border-color: var(--primary);
        background: #f8f9ff;
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(26, 42, 108, 0.1);
    }

    .checkbox-item input[type="checkbox"] {
        width: 18px;
        height: 18px;
        margin-right: 12px;
        cursor: pointer;
        accent-color: var(--primary);
    }

    .checkbox-item span {
        font-weight: 500;
        color: #333;
    }

    .branch-code {
        margin-left: auto;
        font-size: 11px;
        color: #666;
        background: #f0f0f0;
        padding: 3px 8px;
        border-radius: 4px;
    }

    .branches-scroll {
        max-height: 280px;
        overflow-y: auto;
        padding-right: 5px;
    }

    .branches-scroll::-webkit-scrollbar {
        width: 8px;
    }

    .branches-scroll::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .branches-scroll::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 10px;
    }

    .branches-scroll::-webkit-scrollbar-thumb:hover {
        background: #555;
    }

    .user-form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        padding-top: 25px;
        border-top: 2px solid #f0f0f0;
    }

    .user-form-actions .btn-save,
    .user-form-actions .btn-cancel {
        padding: 12px 30px;
        font-size: 15px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.2s;
    }

    /* Landscape optimized layout */
    body {
        min-width: 100%;
    }

    .page-header {
        max-width: 95%;
        margin: 0 auto 20px;
    }

    @@media screen and (min-width: 1200px) {
        .user-create-container {
            max-width: 98%;
        }
        
        .user-form-grid {
            grid-template-columns: repeat(4, 1fr);
        }
        
        .checkbox-grid {
            grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        }
    }

    @@media print {
        body {
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }
        @@page {
            size: landscape;
            margin: 0.5cm;
        }
        .user-create-container {
            max-width: 100%;
            padding: 20px;
        }
    }
</style>

<div class="page-header">
    <h2><i class="fas fa-users-cog"></i> User Management</h2>
</div>

<div class="user-create-container">
    <div class="user-create-header">
        <h3><i class="fas fa-user-plus"></i> Add New User</h3>
    </div>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
        
        <!-- Basic Information Section -->
        <div class="user-form-section">
            <div class="section-title">
                <i class="fas fa-info-circle"></i>
                Basic Information
            </div>
            <div class="user-form-grid">
                <div class="user-form-group">
                    <label asp-for="Username">Username <span class="text-danger">*</span></label>
                    <input asp-for="Username" type="text" placeholder="Enter username" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="user-form-group">
                    <label asp-for="Email">Email <span class="text-danger">*</span></label>
                    <input asp-for="Email" type="email" placeholder="user@example.com" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="user-form-group">
                    <label asp-for="FirstName">First Name <span class="text-danger">*</span></label>
                    <input asp-for="FirstName" type="text" placeholder="Enter first name" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="user-form-group">
                    <label asp-for="LastName">Last Name <span class="text-danger">*</span></label>
                    <input asp-for="LastName" type="text" placeholder="Enter last name" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Password Section -->
        <div class="user-form-section">
            <div class="section-title">
                <i class="fas fa-lock"></i>
                Password & Security
            </div>
            <div class="user-form-grid">
                <div class="user-form-group">
                    <label asp-for="Password">Password <span class="text-danger">*</span></label>
                    <input asp-for="Password" type="password" placeholder="Enter password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="user-form-group">
                    <label asp-for="ConfirmPassword">Confirm Password <span class="text-danger">*</span></label>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Re-enter password" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Roles Section -->
        <div class="user-form-section">
            <div class="section-title">
                <i class="fas fa-user-shield"></i>
                Assign Roles <span class="text-danger">*</span>
            </div>
            <div class="selection-container">
                @if (Model.AvailableRoles.Any())
                {
                    <div class="checkbox-grid">
                        @foreach (var role in Model.AvailableRoles)
                        {
                            <label class="checkbox-item">
                                <input type="checkbox" name="SelectedRoleIds" value="@role.Id" 
                                       @(Model.SelectedRoleIds.Contains(role.Id) ? "checked" : "") />
                                <span>@role.Name</span>
                            </label>
                        }
                    </div>
                }
                else
                {
                    <p style="color: #999; text-align: center; margin: 20px 0;">No roles available</p>
                }
                <span asp-validation-for="SelectedRoleIds" class="text-danger"></span>
            </div>
        </div>

        <!-- Branches Section -->
        <div class="user-form-section">
            <div class="section-title">
                <i class="fas fa-building"></i>
                Assign Branches <span class="text-danger">*</span>
            </div>
            <div class="selection-container">
                @if (Model.AvailableBranches.Any())
                {
                    <div class="branches-scroll">
                        <div class="checkbox-grid">
                            @foreach (var branch in Model.AvailableBranches)
                            {
                                <label class="checkbox-item">
                                    <input type="checkbox" name="SelectedBranchIds" value="@branch.BranchID" 
                                           @(Model.SelectedBranchIds.Contains(branch.BranchID) ? "checked" : "") />
                                    <span>@branch.BranchName</span>
                                    <span class="branch-code">@branch.BranchCode</span>
                                </label>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <p style="color: #999; text-align: center; margin: 20px 0;">No branches available</p>
                }
                <span asp-validation-for="SelectedBranchIds" class="text-danger"></span>
            </div>
        </div>

        <div class="user-form-actions">
            <a asp-action="Index" class="btn-cancel">
                <i class="fas fa-times"></i> Cancel
            </a>
            <button type="submit" class="btn-save">
                <i class="fas fa-save"></i> Save User
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
