@model IEnumerable<HotelApp.Web.Models.OtherCharge>
@{
    ViewData["Title"] = "Other Charges Master";

    string TypeLabel(OtherChargeType t) => t switch
    {
        OtherChargeType.CarRental => "Car Rentral",
        OtherChargeType.Fitness => "Fitness",
        OtherChargeType.Laundry => "Laundry",
        OtherChargeType.Others => "Others",
        OtherChargeType.TourAndTravel => "Tour & Travel",
        OtherChargeType.FoodAndBeverage => "Food & Beverage",
        _ => t.ToString()
    };
}

<div class="page-header">
    <h2><i class="fas fa-receipt"></i> Other Charges Master</h2>
    <a asp-action="Create" class="btn-create">
        <i class="fas fa-plus"></i> Add Other Charge
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        @TempData["SuccessMessage"]
    </div>
}

@if (Model.Any())
{
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Rate</th>
                    <th>GST %</th>
                    <th>CGST %</th>
                    <th>SGST %</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                    <tr>
                        <td><strong>@row.Code</strong></td>
                        <td>@row.Name</td>
                        <td>@TypeLabel(row.Type)</td>
                        <td>@row.Rate.ToString("0.00")</td>
                        <td>@row.GSTPercent.ToString("0.00")</td>
                        <td>@row.CGSTPercent.ToString("0.00")</td>
                        <td>@row.SGSTPercent.ToString("0.00")</td>
                        <td>
                            @if (row.IsActive)
                            {
                                <span class="badge badge-available">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-maintenance">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@row.Id" class="btn-action btn-view" title="View Other Charge">
                                    <i class="fas fa-eye"></i>
                                    <span>View</span>
                                </a>
                                <a asp-action="Edit" asp-route-id="@row.Id" class="btn-action btn-edit" title="Edit Other Charge">
                                    <i class="fas fa-pen"></i>
                                    <span>Edit</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-receipt"></i>
        <h3>No Other Charges Found</h3>
        <p>Get started by adding your first other charge</p>
        <a asp-action="Create" class="btn-create">
            <i class="fas fa-plus"></i> Add Other Charge
        </a>
    </div>
}
